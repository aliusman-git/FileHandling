import java.io.File;
import java.util.HashMap;
import java.util.Scanner;

public class UserChallenge {
    public static void main(String[] args) {
        try {
            File file1 = new File("C:\\Users\\Lab User\\Desktop\\sales2.txt");
            Scanner sc1 = new Scanner(file1);
            HashMap<String, Integer> totals = new HashMap<>();
            String line = sc1.nextLine();
            String[] menu = line.split("\t");
            System.out.println("Choose option from which you want to calculate sale:");
            for (int i = 0; i < menu.length; i++) System.out.println(i + " " + menu[i]);
            Scanner sc = new Scanner(System.in);
            int userinp = sc.nextInt();
            while (userinp < 0 || userinp >= menu.length) {
                System.out.println("Choose correct option:");
                userinp = sc.nextInt();
            }
            while (sc1.hasNextLine()) {
                line = sc1.nextLine();
                String[] arr = line.split("\t");
                if (arr.length < 6) continue;
                String key = arr[userinp].trim();
                int sum = Integer.parseInt(arr[4].trim()) * Integer.parseInt(arr[5].trim());
                totals.put(key, totals.getOrDefault(key, 0) + sum);
            }
            System.out.println("Result:");
            for (String k : totals.keySet()) System.out.println(k + " : " + totals.get(k));
            sc1.close();
            sc.close();
        } catch (Exception e) {
            e.printStackTrace();
        }
    }
}
